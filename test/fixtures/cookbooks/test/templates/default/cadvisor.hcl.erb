job "cadvisor" {
  region = "global"

  datacenters = ["dc1"]

  type = "system"

  group "core" {
    task "cadvisor" {
      driver = "docker"

      config {
        image = "google/cadvisor"
        port_map {
          cadvisor = 8080
        }
      }

      service {
        port = "cadvisor"

        check {
          type = "http"
          path = "/"
          interval = "10s"
          timeout = "5s"
        }
      }

      resources {
        cpu = 100
        memory = 32
        network {
          mbits = 100
          port "cadvisor" {}
        }
      }
    }
  }
}
